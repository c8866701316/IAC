                            {
                                <div class="row">
                                    <label class="col-md-6">@Model.tblBuildingsDTO.Sdf1label:</label>
                                    <label class="col-md-6">@Model.tblBuildingsDTO.Sdf1</label>
                                </div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.tblBuildingsDTO.Sdf2label) && !string.IsNullOrWhiteSpace(Model.tblBuildingsDTO.Sdf2))
                            {
                                <div class="row">
                                    <label class="col-md-6">@Model.tblBuildingsDTO.Sdf2label:</label>
                                    <label class="col-md-6">@Model.tblBuildingsDTO.Sdf2</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row mt10">
                        <div class="col-md-5">
                            <strong><u>Building Components</u></strong>
                            <div class="row">
                                <label class="col-md-6">Exterior Wall Type:</label>
                                <label class="col-md-6">@Model.tblBuildingsDTO.ExteriorWallType</label>
                            </div>
                            <div class="row">
                                <label class="col-md-6">Heating:</label>
