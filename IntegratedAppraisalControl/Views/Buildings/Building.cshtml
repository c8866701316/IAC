                                }
                                else
                                {
                                    <img src="~/Images/noimage.png"
                                         class="img" style="max-height: 300px;max-width: 300px;" />
                                }
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label for="inputEmail1" class="col-lg-12 control-label" style="text-align:center;">Building <br />Reproduction cost New<br />Less Exclusions</label>
                            <label for="inputEmail1" class="col-lg-12 control-label" style="text-align:center;">@Model.tblBuildingsDTO.BuildingCrn</label>
                        </div>
                        <div class="col-md-3">
                            <label for="inputEmail1" class="col-lg-12 control-label" style="text-align:center;">Contents <br /> Reproduction cost New <br /></label>
                            <label for="inputEmail1" class="col-lg-12 control-label" style="text-align:center;">@Model.tblBuildingsDTO.ContentsCrn</label>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.tblBuildingsDTO.Pito) && (Model.tblBuildingsDTO.Pito).Trim() != "$0")
                        {
                            <div class="col-md-1">
                                <label for="inputEmail1" class="col-lg-12 control-label" style="text-align:center;">PITO <br /> <br /></label>
                                <label for="inputEmail1" class="col-lg-12 control-label" style="text-align:center;">@Model.tblBuildingsDTO.Pito</label>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.tblBuildingsDTO.StainedGlass) && (Model.tblBuildingsDTO.StainedGlass).Trim() != "$0")
                        {
                            <div class="col-md-2">
                                <label for="inputEmail1" class="col-lg-12 control-label" style="text-align:center;">Stained Glass <br /> <br /></label>
                                <label for="inputEmail1" class="col-lg-12 control-label" style="text-align:center;">@Model.tblBuildingsDTO.StainedGlass</label>
