                                <div class="row">
                                    <label class="col-md-6">Emergency Generator:</label>
                                    <label class="col-md-6">@Model.tblBuildingsDTO.EmergencyGenerator</label>
                                </div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.tblBuildingsDTO.Capacity))
