@section Scripts{
<script type="text/javascript">

        $("#frmEdit").submit(function (e) {
            e.preventDefault(); // avoid to execute the actual submit of the form.

            if ($("#frmEdit").valid()) {

                var form = $(this);
                var url = form.attr('action');

                $.ajax({
                    type: "POST",
                    url: url,
                    data: form.serialize(), // serializes the form's elements.
                    dataType: "json",
                    success: function (responseData) {

                        alert(responseData.Message);
                    },
                    error: function () {
                        alert('There is some issue please try again after some time.')
                    }
                });
            }
    });

    $('.clsChangeMaintance').click(function () {
        var ChangeType = $(this).data("changetype");
        var url =''

        if (ChangeType == 'change')
        {
            $('#myBuildingChangeMaintananceHeader').html('Building Change');
            url = '@Url.Action("_BuildingChange", "Buildings",new { BuildingId = Model.tblBuildingsDTO.BuildingId })' + '&Id=0';
        }
        else
        {

            $('#myBuildingChangeMaintananceHeader').html('Building Maintanance');
            url = '@Url.Action("_BuildingMaintanance", "Buildings", new { BuildingId = Model.tblBuildingsDTO.BuildingId })' + '&Id=0';
        }
        loadChageOrMaintanance(url);
    });

        function loadChageOrMaintanance(url)
        {
            $.ajax({
                type: "GET",
                url: url,
                success: function (responseData) {

                    $('#bodyChangeMaintanance').html(responseData);
                    $('#myBuildingChangeMaintanance').modal('show');
                    fnFormvalidate("frnChangesMaintanance");

                },
                error: function () {
                    alert('There is some issue please try again after some time.')
                }
            });
        }

        $(document).on('click', '#AddChange', function (e) {
            e.preventDefault();
            var form = $('#frnChangesMaintanance');


            if (!form.valid()) {
                return;
            }

            var url = form.attr('action');
            var data = form.serialize();


            $.ajax({
                type: "POST",
                url: url,
                data: data, // serializes the form's elements.
                dataType: "json",
                success: function (responseData) {
                    alert(responseData.Message);
                    if (responseData.Status) {
                        initBuildingChanges();
                        initBuildingMaintenance();
                        clearChangeMaintananceForm();
                        $('#myBuildingChangeMaintanance').modal('hide');
                    }
                },
                error: function () {
                    alert('There is some issue please try again after some time.')
