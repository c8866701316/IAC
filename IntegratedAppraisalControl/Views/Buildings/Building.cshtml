<div class="panel-group main" id="accordion">
    <div class="panel panel-primary">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#buildingmain">
            <h4 class="panel-title">
                @ViewBag.Title
            </h4>
        </div>
        <div id="buildingmain" class="panel-collapse collapse in">
            @using (Html.BeginForm("Edit", "Buildings", FormMethod.Post, new { @class = "form-horizontal", @id = "frmEdit" }))
            {
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group col-md-12">
                                <label for="inputEmail1" class="col-lg-4 control-label">BldgNo:</label>
                                <div class="col-lg-8">
                                    @Html.TextBoxFor(m => m.tblBuildingsDTO.BuildingCode, new { @class = "form-control required required2", @maxlength = "4", @placeholder = "BldgNo" })
                                    @Html.HiddenFor(m => m.tblBuildingsDTO.BuildingId)
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="inputEmail1" class="col-lg-4 control-label">Name:</label>
                                <div class="col-lg-8">
                                    @Html.TextBoxFor(m => m.tblBuildingsDTO.BuildingName, new { @class = "form-control required required2", @maxlength = 75, @placeholder = "Name" })
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="inputEmail1" class="col-lg-4 control-label">Address:</label>
                                <div class="col-lg-8">
                                    @Html.TextBoxFor(m => m.tblBuildingsDTO.Address1, new { @class = "form-control required required2", @maxlength = 75, @placeholder = "Address" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group col-md-12">
                                <label for="inputEmail1" class="col-lg-4 control-label">City:</label>
                                <div class="col-lg-8">
                                    @Html.TextBoxFor(m => m.tblBuildingsDTO.City, new { @class = "form-control required required2", @maxlength = 75, @placeholder = "City" })
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="inputEmail1" class="col-lg-4 control-label">State:</label>
                                <div class="col-lg-8">
                                    @Html.TextBoxFor(m => m.tblBuildingsDTO.State, new { @class = "form-control required required2", @maxlength = 4, @placeholder = "State" })
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="inputEmail1" class="col-lg-4 control-label">Zip:</label>
                                <div class="col-lg-8">
                                    @Html.TextBoxFor(m => m.tblBuildingsDTO.ZipCode, new { @class = "form-control required required2", @maxlength = 10, @placeholder = "ZipCode" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="col-md-12">
                                <label for="inputEmail1" class="col-lg-8 control-label">IAC Contract No:</label>
                                <label for="inputEmail1" class="col-lg-4 control-label">@Model.tblBuildingsDTO.ContractNo</label>
                            </div>
                            <div class="col-md-12">
                                <label for="inputEmail1" class="col-lg-8 control-label">IAC Revaluation No:</label>
                                <label for="inputEmail1" class="col-lg-4 control-label">@Model.tblBuildingsDTO.RevaluationNo</label>
                            </div>
                            <div class="col-md-12">
                                <label for="inputEmail1" class="col-lg-8 control-label">Effective Date:</label>
                                <label for="inputEmail1" class="col-lg-4 control-label">@Model.tblBuildingsDTO.EffectiveDate</label>
                            </div>
                            <div class="col-md-12">
                                <label for="inputEmail1" class="col-lg-8 control-label">Appraisal Date:</label>
                                <label for="inputEmail1" class="col-lg-4 control-label">@Model.tblBuildingsDTO.AppraisalDate</label>
                            </div>
                        </div>

                        <div class="col-md-6" style="text-align:center;">
                            <a href="#" class="lnk-m">
                                @if (Model.listTblBuildingImagesDTO.Where(m => m.MainPhoto).FirstOrDefault() != null && !string.IsNullOrEmpty(Model.listTblBuildingImagesDTO.Where(m => m.MainPhoto).FirstOrDefault().ImageName))
                                {
                                    <img src="~/Images/@Model.listTblBuildingImagesDTO.Where(m => m.MainPhoto).FirstOrDefault().ImageName" onerror="this.src='@Url.Content("/Images/noimage.png")'"
                                         class="img" style="max-height: 300px;max-width: 300px;" />
                                }
                                else
                                {
                                    <img src="~/Images/noimage.png" class="img"
                                         style="max-height: 300px;max-width: 300px;" />
                                }
                            </a>
                        </div>

                        <div class="col-md-6" style="text-align:center;">
                            <a href="#" class="lnk-m">
                                @if (Model.listTblBuildingImagesDTO.Where(m => m.MainPict).FirstOrDefault() != null && !string.IsNullOrEmpty(Model.listTblBuildingImagesDTO.Where(m => m.MainPict).FirstOrDefault().ImageName))
