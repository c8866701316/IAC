@model IntegratedAppraisalControl.Models.InventoryViewModel
@{ }

<form class="" action="@Url.Action("AddChange","Inventory")" id="frnChangesMaintanance">
    <div class="form-group">
        <label for="ddlChangeType">Change Type</label>
        <input type="hidden" id="ChangeType" />
        @Html.DropDownListFor(m => m.objtblInventoryMaintenanceDTO.ChangeTypeId, new SelectList(Model.lstChangesTypeDTO, "ChangeTypeId", "ChangeType"), "", new { placeholder = "changeType", @class = "form-control required required2" })
    </div>
    <div class="form-group">
        <label for="txtDescription">Description</label>
        @Html.TextAreaFor(m => m.objtblInventoryMaintenanceDTO.Description, new { @class = "form-control required required2", @maxlength = "50", @placeholder = "Description", @style = "height: 214px;" })
        @Html.HiddenFor(m => m.Inventory.InventoryId)
        @Html.HiddenFor(m => m.objtblInventoryMaintenanceDTO.InventoryId)
        @Html.HiddenFor(m => m.objtblInventoryMaintenanceDTO.InventoryMaintenanceId)
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="" for="txtMonthAcquired">Month Acquired</label>
                @Html.TextBoxFor(m => m.objtblInventoryMaintenanceDTO.MonthAcq, new { @class = "form-control required required2", @maxlength = "2",@max=12, @min = 1, @number = true, @placeholder = "Month Acquired" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="" for="txtYearAcquired">Year Acquired</label>
                @Html.TextBoxFor(m => m.objtblInventoryMaintenanceDTO.YearAcq, new { @class = "form-control required required2", @maxlength = "4",@max=2099, @min = 1901, @number =true, @placeholder = "Year Acquiredd" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="">Cost</label>
                @Html.TextBoxFor(m => m.objtblInventoryMaintenanceDTO.Cost, new { @class = "form-control required required2", @maxlength = "10", @placeholder = "Cost" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="AddChange">
                Save
            </button>
            <button type="button" class="btn btn-default"
                    data-dismiss="modal">
                Close
            </button>
        </div>
    </div>
</form>